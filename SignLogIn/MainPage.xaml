<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SignLogIn.ViewModels"
             FlowDirection="RightToLeft"
             xmlns:viewmodels="clr-namespace:SignLogIn.ViewModels"
             IsBusy="{Binding IsBusy}"
             x:Class="SignLogIn.MainPage">

    <!--  רקע דף  -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="White" />
            <GradientStop Offset="0.5" Color="Black" />
            <GradientStop Offset="1.0" Color="LightGray" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout
    Padding="10"
    Spacing="10"
    VerticalOptions="Center">
        <Image Source="logoor.png" HorizontalOptions="End" VerticalOptions="Start" TranslationY="-87"/>
        <!--  כותרת  -->
        <Label
        FontAttributes="Bold"
        FontSize="24"
        HorizontalOptions="Center"
        Text="הרשמה"
        TextColor="Snow" />

        <!--  שם משתמש  -->
        <Border
        Padding="10"
        Stroke="#ccc"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="1">
            <Entry
            
            FontSize="18"
            Text="{Binding Name, Mode=TwoWay}"
            Placeholder ="שם"
            TextColor="Wheat" />
        </Border>

        <!--  סיסמה עם כפתור צפייה  -->
        <Border
        Stroke="#ccc"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="1">
            <Grid
            Padding="10"
            ColumnDefinitions="*,Auto"
            VerticalOptions="Center">
                <Entry
                FontSize="18"
                IsPassword="{Binding IsPassword, Mode=TwoWay}"
                Text="{Binding Password, Mode=TwoWay}"
                Placeholder ="סיסמה"
                TextColor="Wheat"
                VerticalOptions="Center" />
                
                <Button
                Margin="5,0,0,0"
                Padding="0"
                BackgroundColor="Transparent"
                FontFamily="MaterialSymbols"
                FontSize="35"
                HorizontalOptions="End"
                Text="{Binding EyeIcon, Mode=TwoWay}"
                Command="{Binding TogglePasswordCommand}"
                TextColor="White"
                VerticalOptions="Center" />
            </Grid>
        </Border>
        <!--  email  -->
        <Border
            Padding="10"
            Stroke="#ccc"
            StrokeShape="RoundRectangle 20"
            StrokeThickness="1">
            <Entry
    
                FontSize="18"
                Text="{Binding Email, Mode=TwoWay}"
                Placeholder ="מייל"
                TextColor="Wheat" />
        </Border>
        <!--  טלפון  -->
        <Border
            Padding="10"
            Stroke="#ccc"
            StrokeShape="RoundRectangle 20"
            StrokeThickness="1">
            <Entry
    
                FontSize="18"
                Text="{Binding Phone, Mode=TwoWay}"
                Placeholder ="טלפון"
                TextColor="Wheat" />
        </Border>

        <!--  כפתור כניסה  -->
        <Button
        
        CornerRadius="20"
        FontSize="24"
        HeightRequest="50"
        
        Text="הרשמה"
        Command="{Binding SaveUserCommand}"
        TextColor="White" />
        <!--  שגיאה  -->
        <Label
        
        FontSize="20"
        HorizontalTextAlignment="Center"
        IsVisible="True"
        Text="{Binding Error, Mode=TwoWay}"
        TextColor="Tomato" />
        
        <!--   חזרה לדף כניסה  -->
        <Label Text="יש לך חשבון? התחבר"
               HorizontalTextAlignment="Center"
               FontSize="18"
               TextColor="White"
               Margin="0,10,0,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer
                Command="{Binding NavigateToLoginCommand}" />
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>
