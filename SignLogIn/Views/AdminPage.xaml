<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignLogIn.Views.AdminPage"
             x:Name="MenuBuilderRoot"
             Title="AdminPage">
    <Grid>
        <!-- התוכן הראשי -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                <CollectionView ItemsSource="{Binding Items}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="Gray" StrokeShape="RoundRectangle 15" Padding="10" Margin="5">
                                <Label Text="{Binding Name, Mode=TwoWay}"
                                       FontSize="18"
                                       TextColor="DarkBlue">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.ItemTappedCommand, Source={x:Reference SelectorRoot}}"
                                                              CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

       
    </Grid>
</ContentPage>