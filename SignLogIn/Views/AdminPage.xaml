<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignLogIn.Views.AdminPage"
             xmlns:viewmodels="clr-namespace:SignLogIn.ViewModels"
             xmlns:local="clr-namespace:SignLogIn.Views"
             Title="Admin Page">
    <Grid>
        <!-- התוכן הראשי -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                <CollectionView ItemsSource="{Binding Items}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate  >
                            <Border Stroke="Gray" StrokeShape="RoundRectangle 15" Padding="10" Margin="5">
                                <Label Text="{Binding Name, Mode=TwoWay}"
                                       FontSize="18"
                                       TextColor="DarkBlue">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AdminPageViewModel}}, Path=ItemTappedCommand}"
                                       CommandParameter="{Binding Name}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

       
    </Grid>
</ContentPage>